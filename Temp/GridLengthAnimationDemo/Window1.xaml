<Window x:Class="GridLengthAnimationDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GridLengthAnimationDemo"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" Name="row1"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        
        <Button Content="hello" Grid.Row="0">
            <Button.Triggers>
                <!--Click event of the button to resize-->
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                                <local:GridLengthAnimation 
                                                   Storyboard.TargetProperty="Height"
                                                   Storyboard.TargetName="row1"
                                                   From="5*"
                                                   To="1*"
                                                   Duration="0:0:0.4"
                                                   ReverseValue="5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button Content="hello" Grid.Row="1"/>
    </Grid>
</Window>
