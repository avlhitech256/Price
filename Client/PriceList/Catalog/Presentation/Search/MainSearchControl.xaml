<UserControl x:Class="Catalog.Presentation.Search.MainSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Catalog.Presentation"
             xmlns:search="clr-namespace:Catalog.Presentation.Search"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1050">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="TitleResult" Content="Поиск товаров" Grid.Row="0" Margin="1" HorizontalAlignment="Stretch" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" Background="{DynamicResource DefaultGradientBrush}">
        </Label>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <search:SearchCheckButtonControl Grid.Row="0" Margin="3"></search:SearchCheckButtonControl>
            <search:SearchFieldsControl Grid.Row="1" Margin="3"></search:SearchFieldsControl>
        </Grid>
    </Grid>
</UserControl>
