<UserControl x:Class="Basket.View.BasketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Basket.View"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"
                           MinHeight="200"/>
            <RowDefinition Height="Auto"
                           MaxHeight="250"
                           MinHeight="120"/>
        </Grid.RowDefinitions>
        <local:BasketEditControl Grid.Row="0"/>
        <local:BasketEditComplatedOrdersControl Grid.Row="1" MinHeight="110"></local:BasketEditComplatedOrdersControl>
    </Grid>
</UserControl>
